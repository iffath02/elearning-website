        <input type="text" name="image_url"value="<%= course.image_url %>"/>
        <label for="">Blurb</label>
        <input type="text" name="blurb" value="<%= course.blurb %>"/>
        <label for="">Curriculum</label>
        <input type="text" name="curriculum" value="<%= course.curriculum %>"/>
