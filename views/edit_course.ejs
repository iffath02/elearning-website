<div class="form-wrapper">
    <h1>Edit Course Details</h1>
    <hr>
        <form action="/courses/:course_id" method="post">
            <input type ="hidden" name="_method" value="put">
            <label for="">Category</label>
            <input type="text" name="category" value="<%= course.category %>" required/>
            <label for="">Course Id</label>
            <input type="text" name="course_id" value="<%= course.course_id %>" readonly required/>
            <label for="">Course Name</label>
            <input type="text" name="course_name" value="<%= course.course_name %>" required/>
            <label for="">Image URL</label>
            <input type="text" name="image_url" placeholder="Enter an Image Url" value="<%= course.image_url %>"/>
            <label for="">Blurb</label>
            <input type="text" name="blurb" placeholder="Enter blurb" value="<%= course.blurb %>"/>
            <label for="">Curriculum</label>
            <textarea name="curriculum" placeholder="Enter Curriculum" rows="4" cols="50"></textarea>
            <label for="">Skills Covered</label>
            <textarea placeholder="Enter skills covered" name="skills_covered"></textarea>
            <button class="btn-edit">Edit Details</button>
        </form>
</div>    