    <h2>Course details</h2>
    <p><%= course.course_name %></p>
    <p><img src="<%= course.image_url %>" alt=""></p>
    <p><%= course.blurb %></p>
    <p><%= course.curriculum %></p>
    <p><%= course.skills_covered %></p>
    <% if(isLoggedIn() && !isAdmin()){ %>
        <form action="/users/<%= course.course_id %>" method="post">
            <input type="hidden" name="user_id" value="<%= currentUser.user_id %>">
            <button>Add Course</button>
        </form>
    <% } %>
    <% if(isLoggedIn() && isAdmin()){ %>
        <form action="/courses/<%= course.course_id %>/edit">
            <input type="hidden" name="course_id" value="<%= course.course_id %>">
            <button>Edit Course</button>
        </form>
        <form action="/courses/<%= course.course_id %>" method="post">
            <input type ="hidden" name="_method" value="delete">
            <input type="hidden" name="course_id" value="<%= course.course_id %>">
            <button>Delete Course</button>
        </form>
    <% } %>  