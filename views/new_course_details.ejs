<div class="form-wrapper">
    <h1>Add course details</h1>
    <hr>
        <form action="/courses/new/course/:course_id" method="post">
            <label for="">Category</label>
            <input type="text" name="category" value="<%= category %>" readonly>
            <label for="">Course Id</label>
            <input type="text" name="course_id" value="<%= course_id %>" readonly/>
            <label for="">Course Name</label>
            <input type="text" name="course_name" value="<%= course_name %>" readonly/>
            <label for="">Image URL</label>
            <input type="text" name="image_url" value="<%= image_url %>" readonly/>
            <label for="">Blurb</label>
            <input type="text" name="blurb" placeholder="Enter blurb" required/>
            <label for="">Curriculum</label>
            <textarea name="curriculum" placeholder="Enter Curriculum" rows="4" cols="50"></textarea>
            <label for="">Skills Covered</label>
            <textarea placeholder="Enter skills covered" name="skills_covered"></textarea>
            <button class="btn-login">Add Details</button>
        </form>
</div>