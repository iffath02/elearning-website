<div class="form-wrapper">
    <h1>Add course details</h1>
    <hr>
        <form action="/courses/new/course/:course_id" method="post">
            <label for="">category</label>
            <input type="text" name="category" value="<%= category %>">
            <label for="">Course Id</label>
            <input type="text" name="course_id" value="<%= course_id %>" readonly/>
            <label for="">Course Name</label>
            <input type="text" name="course_name" value="<%= course_name %>"/>
            <label for="">Image URL</label>
            <input type="text" name="image_url"/>
            <label for="">Blurb</label>
            <input type="text" name="blurb"/>
            <label for="">Curriculum</label>
            <input type="text" name="curriculum"/>
            <label for="">Skills Covered</label>
            <input type="text" name="skills_covered"/>
            <button class="btn-login">Add Details</button>
        </form>
</div>